<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/facebook_layout"
    android:background="@color/com_facebook_button_login_silver_background_color_pressed"
    tools:context="it.android.unishare.FacebookActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/facebookLogo"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/header_big" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/facebookLogo"
        android:background="@drawable/toolbar_dropshadow" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Unishare si affida al Login tramite Facebook per garantire l'affidabilitÃ  dei propri contenuti. Ad eccezione dei dati necessari all'autenticazione, Unishare non richiede alcun permesso aggiuntivo a Facebook.\nLa pubblicazione di contenuti su Unishare da parte degli utenti risulta completamente anonima, in modo tale che ciascuno possa esprimere liberamente la propria opinione."
        android:id="@+id/textView9"
        android:layout_below="@+id/facebookLogo"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/facebook_login"
        android:text="Esegui login con Facebook"
        android:id="@+id/login_button"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
